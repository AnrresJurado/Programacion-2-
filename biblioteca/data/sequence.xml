<odoo>
    <data noupdate="1">

        <!-- ============================= -->
        <!--     SECUENCIA DE PRÉSTAMOS    -->
        <!-- ============================= -->
        <record id="sequence_codigo_prestamos" model="ir.sequence">
            <field name="name">Secuencia Préstamos Biblioteca</field>
            <field name="code">biblioteca.prestamo</field>
            <field name="prefix">PRST/</field>
            <field name="suffix">/BLB</field>
            <field name="padding">4</field>
            <field name="number_next_actual">1</field>
            <field name="implementation">standard</field>
        </record>

        <!-- ============================= -->
        <!--        SECUENCIA MULTAS       -->
        <!-- ============================= -->
        <record id="sequence_codigo_multas" model="ir.sequence">
            <field name="name">Secuencia Multas Biblioteca</field>
            <field name="code">biblioteca.multa</field>
            <field name="prefix">MLT/</field>
            <field name="suffix">/BLB</field>
            <field name="padding">4</field>
            <field name="number_next_actual">1</field>
            <field name="implementation">standard</field>
        </record>

    </data>
</odoo>
